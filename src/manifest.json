{
  "manifest_version": 2,
  "name": "dark.txt",
  "description": "read .txt files in darkness",
  "author": "Austin Hartzheim",
  "version": "1.0.0-alpha.0",
  "icons": {
    "16": "data/icon-16.png",
    "32": "data/icon-32.png",
    "64": "data/icon-64.png"
  },
  "applications": {
    "gecko": {
      "id": "jid1-ADDefLkIZXJwew@jetpack"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_title": "dark.txt",
    "default_icon": {
      "32": "data/icon-32.png",
      "64": "data/icon-64.png"
    },
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["data/content-script.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
